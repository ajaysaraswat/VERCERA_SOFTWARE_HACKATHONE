<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Summary Viewer</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gradient-to-br from-black via-gray-900 to-slate-900 p-6 min-h-screen">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-semibold text-white text-center mb-6">
        Summary Viewer
      </h1>

      <div class="grid grid-cols-4 gap-6">
        <!-- Sidebar Section -->
        <aside class="col-span-1 bg-gray-800 p-4 rounded-lg shadow-lg">
          <h2 class="text-xl font-medium text-white mb-4">Extracted Summaries</h2>
          <ul id="summary-list" class="space-y-2">
            <!-- Placeholder for dynamically loaded summaries -->
            <li class="text-sm text-gray-300 hover:text-white cursor-pointer">
              <button onclick="viewSummary('Summary Example 1')">
                Summary Example 1
              </button>
            </li>
            <li class="text-sm text-gray-300 hover:text-white cursor-pointer">
              <button onclick="viewSummary('Summary Example 2')">
                Summary Example 2
              </button>
            </li>
          </ul>
        </aside>

        <!-- Main Summary Section -->
        <main class="col-span-3 bg-white p-6 rounded-lg shadow-lg">
          <h2 id="summary-title" class="text-2xl font-semibold text-gray-800 mb-4">
            Click a Summary to View Details
          </h2>
          <p id="summary-content" class="text-gray-700 leading-relaxed">
            Select a summary from the left sidebar to view its content here.
          </p>
        </main>
      </div>
    </div>

    <script>
      function viewSummary(summaryContent) {
        document.getElementById("summary-title").innerText = "Selected Summary";
        document.getElementById("summary-content").innerText = summaryContent;
      }
    </script>
  </body>
</html>
