<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Vercera S/W Hackathon</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 text-white min-h-screen flex flex-col">
    <!-- Navbar -->
    <%- include('./partials/nav') %>

    <!-- Main Container -->
    <div class="flex flex-grow items-center justify-center px-4">
      <div
        class="w-full max-w-4xl mx-auto bg-gray-800 rounded-lg shadow-lg overflow-hidden md:grid md:grid-cols-2"
      >
        <!-- Left Side: Image -->
        <div class="hidden md:flex items-center justify-center bg-gray-700">
          <img
            src="/loginimage.jpg"
            alt="Login Image"
            class="w-full h-full object-cover"
          />
        </div>

        <!-- Right Side: Login Form -->
        <div class="p-8 flex flex-col justify-center">
          <h1 class="text-3xl font-semibold text-center mb-6">Login</h1>

          <form action="/user/signin" method="post" class="space-y-5">
            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300"
                >Your Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Enter your email"
                class="w-full px-4 py-3 mt-1 border rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                required
              />
            </div>

            <!-- Password Field -->
            <div>
              <label
                for="password"
                class="block text-sm font-medium text-gray-300"
                >Password</label
              >
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Enter your password"
                class="w-full px-4 py-3 mt-1 border rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                required
              />
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="flex items-center justify-between">
              <label class="inline-flex items-center">
                <input type="checkbox" class="form-checkbox text-blue-500" />
                <span class="ml-2 text-sm text-gray-300">Remember me</span>
              </label>
              <a
                href="/forgot-password"
                class="text-sm text-blue-400 hover:underline"
                >Forgot password?</a
              >
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full py-3 text-center text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
            >
              Sign In
            </button>

            <!-- Sign Up Link -->
            <p class="text-center text-gray-300 mt-4">
              Don't have an account?
              <a href="/signup" class="text-blue-400 hover:underline"
                >Sign up</a
              >
            </p>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
  </body>
</html>
