<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Summary Viewer</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gradient-to-br from-black via-gray-900 to-slate-900 p-6 min-h-screen">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-semibold text-white text-center mb-6">
        Summary Viewer
      </h1>

      <div class="grid grid-cols-4 gap-6">
        <!-- Sidebar Section -->
        <aside class="col-span-1 bg-gray-800 p-4 rounded-lg shadow-lg">
          <h2 class="text-xl font-medium text-white mb-4">Extracted Summaries</h2>
          <ul id="summary-list" class="space-y-2"></ul>
        </aside>

        <!-- Main Summary Section -->
        <main class="col-span-3 bg-white p-6 rounded-lg shadow-lg">
          <h2 id="summary-title" class="text-2xl font-semibold text-gray-800 mb-4">
            Summary
          </h2>
          <p id="summary-content" class="text-gray-700 leading-relaxed">
            Select a summary to view the details here.
          </p>
        </main>
      </div>
    </div>

    <script>
      // Fetch data and render summaries in the sidebar
      document.addEventListener("DOMContentLoaded", async () => {
        const getUrl = "http://localhost:8000/user/getallsummary";

        try {
          const response = await fetch(getUrl, {
            method: "GET",
            credentials: "include"
          });

          if (!response.ok) {
            throw new Error("Failed to fetch summaries");
          }

          const data = await response.json();
          const youtubeVideos = data.youtubeVideos || [];
          const summaryList = document.getElementById("summary-list");

          // Populate summaries in the sidebar
          youtubeVideos.forEach(video => {
            const listItem = document.createElement("li");
            listItem.className =
              "text-sm text-gray-300 hover:text-white cursor-pointer";

            const button = document.createElement("button");
            button.innerText = video.title;
            button.className = "w-full text-left";
            button.onclick = () => viewSummary(video);

            listItem.appendChild(button);
            summaryList.appendChild(listItem);
          });
        } catch (error) {
          console.error("Error loading summaries:", error);
        }
      });

      // Show the selected summary
      function viewSummary(video) {
        document.getElementById("summary-title").innerText = video.title;
        document.getElementById("summary-content").innerText = video.summary;
      }
    </script>
  </body>
</html>
